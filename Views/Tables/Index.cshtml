@model IEnumerable<WebAppDBMS.Models.Table>

@{
    ViewData["Title"] = "Index";
}

<h1>Tables</h1>

<p>
    <a asp-action="Create" asp-route-databaseId="@ViewBag.DatabaseId">Add table</a>
    <a asp-action="Proj" asp-route-databaseId="@ViewBag.DatabaseId">Make table projection</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Database)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr bgcolor="#8ecae6">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Database.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Databases">Back to List</a>
</div>
